@model List<ResearchProject.ModelViews.CartItem>
@if (Model != null && Model.Count() > 0)
{
    <div class="header__cart">
        <ul>
            <li><a href="cart.html"><i class="fa fa-shopping-bag"></i> <span>@Model.Count()</span></a></li>
        </ul>
    </div>
}
else
{
    <div class="header__cart">
        <ul>
            <li><a href="cart.html"><i class="fa fa-shopping-bag"></i> <span>0</span></a></li>
        </ul>
    </div>
}
