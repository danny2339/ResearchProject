@model List<Product>
@if (Model != null && Model.Count() > 0)
{

<div class="featured__item">
    @foreach (var item in Model)
    {
        string url = $"/{item.Alias}-{item.ProductId}.html";
<div class="featured__item__pic set-bg" data-setbg="images/products/@item.Thumb" style="background-image: url(images/products/@item.Thumb);">
    <ul class="featured__item__pic__hover">
        <li><a href="javascript:void(0)" class="add" data-mhh="@item.ProductId"><i class="fa fa-shopping-cart"></i></a></li>
    </ul>
</div>
                    <div class="featured__item__text">
                        <h6><a href="@url">@item.ProductName</a></h6>
                        <h5>@item.Price</h5>
                    </div>}

</div>}



