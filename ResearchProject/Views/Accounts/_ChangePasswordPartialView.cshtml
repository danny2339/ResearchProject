@model ResearchProject.ModelViews.ChangePasswordViewModel
    <form asp-controller="Accounts" asp-action="ChangePassword" method="post">
        <div class="form-group row">
            <label for="inputPassword3" class="col-sm-2 col-form-label">Current Password</label>
            <div class="col-sm-10">
                <input type="password" asp-for="PasswordNow" class="form-control" id="inputPassword3" placeholder="Password">
            </div>
        </div>
        <div class="form-group row">
            <label for="inputPassword3" class="col-sm-2 col-form-label">New Password</label>
            <div class="col-sm-10">
                <input type="password" asp-for="Password" class="form-control" id="inputPassword3" placeholder="Password">
            </div>
        </div>
        <div class="form-group row">
            <label for="inputPassword3" class="col-sm-2 col-form-label">Confirm New Password</label>
            <div class="col-sm-10">
                <input type="password" asp-for="ConfirmPassword" class="form-control" id="inputPassword3" placeholder="Password">
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-10">
                <button type="submit" class="btn btn-primary">Save Change</button>
            </div>
        </div>
    </form>
