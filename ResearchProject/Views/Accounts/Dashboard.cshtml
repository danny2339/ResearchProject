@model ResearchProject.Models.Customer

@{
    ViewData["Title"] = "Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
    List<Order> lsOrders = ViewBag.Order;
    ResearchProject.ModelViews.ChangePasswordViewModel changepassword = new ResearchProject.ModelViews.ChangePasswordViewModel();
}

<section class="product-details spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-md-6">
                <ul class="nav nav-tabs nav-justified" id="myTabJustified" role="tablist">
                    <li class="nav-item">
                        <a class="nav-link active" id="home-tab-justified" data-toggle="tab" href="#home-justified" role="tab" aria-controls="home-justified" aria-selected="true">Welcome</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="profile-tab-justified" data-toggle="tab" href="#profile-justified" role="tab" aria-controls="profile-justified" aria-selected="false">Information</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="contact-tab-justified" data-toggle="tab" href="#contact-justified" role="tab" aria-controls="contact-justified" aria-selected="false">Orders</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="contact-tab-justified" data-toggle="tab" href="#change-justified" role="tab" aria-controls="contact-justified" aria-selected="false">Change Password</a>
                    </li>
                </ul>
            </div>
            <div class="col-lg-6 col-md-6">
                <div class="tab-content m-t-15" id="myTabContentJustified">
                    <div class="tab-pane fade show active" id="home-justified" role="tabpanel" aria-labelledby="home-tab-justified">
                        <p>Hello, @Model.FullName</p>
                        <p>Now, you can shopping online anything you want.</p>
                        <p>You will experience the best service from our store. With a diverse source of coffee, you will be immersed in the aroma of coffee. </p>
                        <p>
                            In addition, we also support online payment for remote customers.
                        </p>
                        <p>We hope you will have a great experience in our shop. Have a great day.</p>
                        <p>Best regards!</p>
                    </div>
                    <div class="tab-pane fade" id="profile-justified" role="tabpanel" aria-labelledby="profile-tab-justified">
                        <form>
                            <div class="form-group">
                                <label for="inputEmail4">Full Name</label>
                                <span class="form-control" id="inputEmail4">@Model.FullName</span>
                            </div>
                            <div class="form-group">
                                <label for="inputPassword4">Email</label>
                                <span class="form-control" id="inputPassword4">@Model.Email</span>
                            </div>

                            <div class="form-group">
                                <label for="inputAddress">Address</label>
                                @if (Model.Address == null)
                                {
                                    <span class="form-control" id="inputAddress">Not Update</span>

                                }
                                else
                                {
                                    <span class="form-control" id="inputAddress">@Model.Address</span>

                                }
                            </div>
                            <div class="form-group">
                                <label for="inputAddress">Birthday</label>
                                @if (Model.Birthday == null)
                                {
                                    <span class="form-control" id="inputAddress">Not Update</span>

                                }
                                else
                                {
                                    <span class="form-control" id="inputAddress">@Model.Birthday</span>

                                }
                            </div>
                            <div class="form-group">
                                <label for="inputAddress">Phone</label>
                                @if (Model.Phone == null)
                                {
                                    <span class="form-control" id="inputAddress">Not Update</span>

                                }
                                else
                                {
                                    <span class="form-control" id="inputAddress">@Model.Phone</span>

                                }
                            </div>
                        </form>
                    </div>
                    <div class="tab-pane fade" id="contact-justified" role="tabpanel" aria-labelledby="contact-tab-justified">
                        @await Html.PartialAsync("_OrdersPartialView", lsOrders)
                    </div>
                    <div class="tab-pane fade" id="change-justified" role="tabpanel" aria-labelledby="contact-tab-justified">
                        @await Html.PartialAsync("_ChangePasswordPartialView", changepassword)
                    </div>
                </div>
                </div>
            </div>
        </div>
</section>












