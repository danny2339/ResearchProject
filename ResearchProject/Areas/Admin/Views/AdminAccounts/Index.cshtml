@model IEnumerable<ResearchProject.Models.Account>

@{
    ViewData["Title"] = "Authorized Account";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

    <div class="page-header">
        <h2>List Authorized Account</h2>
        <div class="header-sub-title">
            <nav class="breadcrumb" style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
                <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="breadcrumb-item"><i class="fa fa-home" aria-hidden="true"></i>Home</a>
                <span class="breadcrumb-item active">Authorized Account List</span>
            </nav>
        </div>
    </div>
    <div class="card">
        <div class="card-body">
            <div class="col-lg-8">
                <div class="d-md-flex">
                    <div class="m-b-10 m-r-15">
                        <select class="custom-select" id="idrole" name="idrole" style="min-width:200px; border-radius:5px; border-width:thin" asp-items="ViewBag.RoleId">
                            <option value="" disabled selected>Choose Authorize</option>
                        </select>
                    </div>
                    <div class="m-b-10">
                        <select class="custom-select" id="idrole" name="idrole" style="min-width:200px; border-radius:5px; margin-left:10px; border-width:thin" asp-items="ViewBag.IsStatus">
                            <option value="" disabled selected>Choose Status</option>
                        </select>
                    </div>
                </div>
            </div>
            <div class="col-12">

                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th scope="col">ID</th>
                                <th scope="col">FullName</th>
                                <th scope="col">Email</th>
                                <th scope="col">Phone</th>
                                <th scope="col">LastLogin</th>
                                <th scope="col">Role</th>
                                <th scope="col">Status</th>
                                <th scope="col" style="text-align:center">#</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null)
                            {
                                foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.AccountId</td>
                                        <td>@item.FullName</td>
                                        <td>@item.Email</td>
                                        <td>@item.Phone</td>
                                        <td>@item.LastLogin</td>
                                        <td>@item.Role.Description</td>
                                        <td>
                                            @if (item.Active)
                                            {
                                                <div class="d-flex align-items-center">
                                                    <div class="badge badge-success badge-dot m-r-10"></div>
                                                    <div>Active</div>
                                                </div>
                                            }
                                            else
                                            {
                                                <div class="d-flex align-items-center">
                                                    <div class="badge badge-warning badge-dot m-r-10"></div>
                                                    <div>Block</div>
                                                </div>
                                            }

                                        </td>
                                        <td>
                                            <a class="btn btn-outline-primary m-2" asp-area="Admin" asp-controller="AdminAccounts" asp-action="Details" asp-route-id="@item.AccountId">View</a>
                                            <a class="btn btn-outline-secondary m-2" asp-area="Admin" asp-controller="AdminAccounts" asp-action="Edit" asp-route-id="@item.AccountId">Edit</a>
                                            <a class="btn btn-outline-success m-2" asp-area="Admin" asp-controller="AdminAccounts" asp-action="Delete" asp-route-id="@item.AccountId">Delete</a>
                                        </td>
                                    </tr>
                                }
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
       
  
